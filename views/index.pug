doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/index.css')

  body
    .form-container
      h2 User Role Selection
      form(action="/homepage" method="POST")#userForm
        .form-group
          label(for="userID") User ID:
          input(type="text" id="userID" name="userID" required)
        .form-group
          label(for="role") Role:
          select(id="role" name="role" required onchange="toggleUserID()")
            option(value="student") Student
            option(value="faculty") Faculty
            option(value="registrar") Registrar
        button(type="submit") Submit

    script.
      function toggleUserID() {
        const role = document.getElementById('role').value;
        const userIDField = document.getElementById('userID');

        if (role === 'registrar') {
          userIDField.value = ''; // Clear any input
          userIDField.setAttribute('disabled', 'disabled');
          userIDField.removeAttribute('required');
        } else {
          userIDField.removeAttribute('disabled');
          userIDField.setAttribute('required', 'required');
        }
      }
